html
	font-size: 20px
	color: $black
	font-family: "Lucida Console", Monaco, monospace

a
	color: $primary
	text-decoration: none
	cursor: pointer
	
	&:hover
		color: darken($primary, 15)

/* small desktop */
@media all and (max-width: 1200px)
	html
		font-size: 20px

/* tablet */
@media all and (max-width: 1024px)
	html
		font-size: 30px

/* mobile phone */
@media all and (max-width: 768px)
	html
		font-size: 40px
